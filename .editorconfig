# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{py,js}]
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[*.{html,scss,css,sass}]
indent_style = space
indent_size = 2
